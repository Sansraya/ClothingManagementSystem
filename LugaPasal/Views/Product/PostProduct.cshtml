@model LugaPasal.Models.PostProductModel

<div class="container w-50 my-5">
    <div class="card shadow-sm border-1 rounded-4">
        <div class="card-header text-dark text-center rounded-top-4" style="background-color:burlywood">
            <h3 class="fw-semibold text-uppercase"
                style="letter-spacing:3px; font-family:'Roboto Condensed', sans-serif;"> 
                Post your product 
                </h3>
        </div>
        @if(TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Product Name</label>
                    <input class="form-control" type="text" asp-for="ProductName" placeholder="Enter product name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <textarea class="form-control" asp-for="ProductDescription" placeholder="Enter product description" rows="3" draggable="false"> </textarea>
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold"> Category</label>
                    <select class="form-control" type="text" asp-for="ProductCategory"> 
                        <option value="Hoodie"> Hoodie </option>
                        <option value="Shorts"> Shorts </option>
                        <option value="Pants"> Pants </option>
                        <option value="Bags"> Bags </option>
                        <option value="Shirts"> Shirts </option>
                        <option value="Clothes"> Clothes </option>
                    </select>
                  
                    <span asp-validation-for="ProductCategory" class="text-danger"></span>

                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Price</label>
                        <input class="form-control" type="number" asp-for="ProductPrice" placeholder="0.00" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Quantity</label>
                        <input class="form-control" type="number" asp-for="ProductQuantity" placeholder="0" />
                        <span asp-validation-for="ProductQuantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Attach Pictures</label>
                    <input class="form-control" type="file" asp-for="ProductImage" multiple />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success"
                            onclick="return confirm('Are you sure the information is correct?');">
                        Submit
                    </button>
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #f5f5f5;
    }
</style>