@using LugaPasal.Entities
@model List<Cart>

<div class="container my-5">
    <h2 class="fw-bold mb-4 text-uppercase border-bottom pb-2">🛒 Your Shopping Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-cart-x"></i> Your cart is empty.
        </div>
    }
    else
    {
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="notifications alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="notifications alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="card list-group shadow-sm rounded">
            @foreach (var product in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <!-- Product Info -->
                    <div class="d-flex align-items-center">
                        <img src="@( !string.IsNullOrEmpty(product.ProductImagePath)
                                                                    ? product.ProductImagePath
                                                                    : Url.Content("~/images/icons/default.jpg"))"
                     class="rounded shadow-sm"
                     style="width:80px; height:80px; object-fit:cover;" />

                        <div class="ms-3">
                            <h6 class="mb-1 fw-bold text-dark">@product.ProductName</h6>
                            <p class="mb-0 text-muted small">Rs @product.ProductPrice.ToString("N0")</p>
                            <p class="mb-0 text-muted small">Qty: @product.Quantity</p>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="text-end">
                        <a asp-action="RemoveFromCart" asp-controller="Product" asp-route-id="@product.ProductID"
                           class="btn btn-sm btn-outline-danger px-3 shadow-sm">
                            <i class="bi bi-trash"></i> Remove
                        </a>
                    </div>
                </div>
                }
        </div>

        <!-- Cart Summary -->
        <div class="card mt-4 shadow-sm">
            <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">Total:</h5>
                <h5 class="text-success fw-bold mb-0">
                    Rs @Model.Sum(p => p.ProductPrice * p.Quantity).ToString("N0")
                </h5>
            </div>
        </div>

        <!-- Checkout Button -->
        <div class="text-end mt-3">
            <a asp-action="Checkout" asp-controller="Product"
               class="btn btn-dark px-4 py-2 rounded-3 shadow-sm">
                Proceed to Checkout →
            </a>
        </div>
    }
</div>

<style>
    main {
        flex: 1;
        margin-bottom: 200px;
    }
</style>


