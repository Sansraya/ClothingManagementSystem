@using LugaPasal.Entities
@model List<Cart>
@using System.Text.Json;

@{
    var total = Model.Sum(p => p.ProductPrice * p.Quantity);
    var discountedPrice = 0m;
    if (ViewBag.Coupon != null)
    {
        var discountPercent = ViewBag.Coupon.DiscountAmount;
        discountedPrice = total - (total * discountPercent / 100);
    }
}

<div class="container my-5">
    <h2 class="fw-bold mb-4 text-uppercase border-bottom pb-2">🛒 Your Shopping Cart</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            <i class="bi bi-cart-x"></i> Your cart is empty.
        </div>
    }
    else
    {
        <div class="card list-group shadow-sm rounded">
            @foreach (var product in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                    <!-- Product Info -->
                    <div class="d-flex align-items-center">
                        <img src="@( !string.IsNullOrEmpty(product.ProductImagePath)
                                                                                                                                                                                                                                                                                                                                                                                                                                                                            ? product.ProductImagePath
                                                                                                                                                                                                                                                                                                                                                                                                                                                                            : Url.Content("~/images/icons/default.jpg"))"
                     class="rounded shadow-sm"
                     style="width:80px; height:80px; object-fit:cover;" />

                        <div class="ms-3">
                            <h6 class="mb-1 fw-bold text-dark">@product.ProductName</h6>
                            <p class="mb-0 text-muted small">Rs @product.ProductPrice.ToString("N0")</p>
                            <div class="d-flex gap-2">
                                <a class="text-decoration-none text-danger" asp-action="ManipulateQuantity" asp-controller="Product" asp-route-id="@product.ProductID " asp-route-quantityAction="Decrease"><i class="bi bi-dash-circle"> </i></a>
                                <p class="text-muted small">Quantity : @product.Quantity</p>
                                <a class="text-decoration-none text-danger" asp-action="ManipulateQuantity" asp-controller="Product" asp-route-id="@product.ProductID" asp-route-quantityAction="Increase"><i class="bi bi-plus-circle"> </i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Actions -->
                    <div class="text-end">
                        <a asp-action="RemoveFromCart" asp-controller="Product" asp-route-id="@product.ProductID"
                           class="btn btn-sm btn-outline-danger px-3 shadow-sm">
                            <i class="bi bi-trash"></i> Remove
                        </a>
                    </div>
                </div>

                }
            <div class="row p-3 ms-3 me-3">
                <div class="col-12 col-md-6 mb-3 ">
                    <h5 class="text-uppercase mb-0 ">Total:</h5>
                    <div class="d-flex flex-column gap-2">
                        <div class="text-uppercase pt-2" style="letter-spacing:1px;"> Apply Coupons </div>
                        <form method="post" asp-action="Coupon" asp-controller="Product" enctype="multipart/form-data">
                            <div class="d-flex gap-3">
                                <input class="form-control w-50" name="Code" placeholder="Enter Coupon Code">
                                <button type="submit" class="btn btn-success hover-shadow">
                                    <i class="bi bi-ticket-perforated-fill me-2"></i> Apply Coupon
                                </button>
                            </div>
                        </form>


                    </div>
                </div>
                <div class="col-12 col-md-6">
                    @if (ViewBag.Coupon == null)
                    {
                        <h5 class="text-end text-success mb-0 ms-3">
                            Rs @Model.Sum(p => p.ProductPrice * p.Quantity).ToString("N0")
                        </h5>
                    }
                    else
                    {
                        <div class="d-flex justify-content-end">
                            <h5 class="text-black mb-0 ms-3 text-decoration-line-through">
                                Rs @Model.Sum(p => p.ProductPrice * p.Quantity).ToString("N0")
                            </h5>
                            <h5 class="text-success ms-3">   Rs @discountedPrice.ToString("N0") </h5>
                        </div>
                    }
                </div>
            </div>
        </div>

     


        <!-- Checkout Button -->
        <div class="text-end mt-3">
            <a asp-action="Checkout" asp-controller="Product"
               asp-route-couponCode="@ViewBag.Coupon?.Code" class=" btn btn-dark text-white text-decoration-none hover-shadow">
                Proceed to Checkout →
            </a>


        </div>
    }
</div>

<style>
    main {
        flex: 1;
        margin-bottom: 200px;
    }
</style>


