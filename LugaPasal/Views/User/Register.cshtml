@model LugaPasal.Models.RegisterModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center text-white py-4 rounded-top"
                     style="background: blue;">
                    <h2 class="fw-bold mb-0">Create Your Account</h2>
                    <p class="mb-0 text-light small">Join us and start your journey</p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Register" asp-controller="User" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">First Name</label>
                                <input class="form-control" type="text" asp-for="FirstName" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Last Name</label>
                                <input class="form-control" type="text" asp-for="LastName" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Username</label>
                                <input class="form-control" type="text" asp-for="Username" placeholder="Choose a username" />
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Email</label>
                                <input class="form-control" type="email" asp-for="Email" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Profile Picture</label>
                                <input type="file" class="form-control" asp-for="ProfilePicture" />
                                <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Phone Number</label>
                                <input class="form-control" type="tel" asp-for="PhoneNumber" placeholder="98XXXXXXXX" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-semibold">Date of Birth</label>
                                <input class="form-control" type="date" asp-for="DateOfBirth" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Password</label>
                                <input class="form-control" type="password" asp-for="Password" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Confirm Password</label>
                                <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Re-enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4 text-center">
                                <button type="submit" class="btn btn-primary w-50 shadow-sm"
                                        onclick="return confirm('Are you sure the information is correct?');">
                                    Register
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted mt-3">
                Already have an account?
                <a asp-controller="User" asp-action="Login" class="text-decoration-none fw-semibold">Login here</a>
            </p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-control:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 5px rgba(106, 17, 203, 0.3);
    }

    .card {
        border-radius: 1rem;
    }
</style>
