@model LugaPasal.Models.DashboardModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="fw-bold text-dark mb-1">
                <i class="bi bi-speedometer2"></i> Admin Dashboard
            </h2>
            <p class="text-muted">Overview of your LugaPasal platform</p>
        </div>
    </div>

    <!-- Top Stats Cards -->
    <div class="row g-4 mb-4">
        <!-- Total Users -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100 ">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small">Total Users</p>
                                <h3 class="fw-bold mb-0">@Model.totalUser</h3>
                            </div>
                            <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-people-fill fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100 ">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small">Total Products</p>
                                <h3 class="fw-bold mb-0">@Model.totalProducts</h3>
                            </div>
                            <div class="stat-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-box-seam fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Rating -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small">Average Rating</p>
                                <h3 class="fw-bold mb-0">@Model.averageRating.ToString("F1") <small class="text-muted fs-6">/ 5</small></h3>
                            </div>
                            <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-star-fill fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Price -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100 ">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small">Average Price</p>
                                <h3 class="fw-bold mb-0">Rs. @Model.averagePrice.ToString("N2")</h3>
                            </div>
                            <div class="stat-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-cash-stack fs-3"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews & Ratings Section -->
    <div class="row g-4 mb-4">
        <!-- Reviews Stats -->
        <div class="col-12 col-lg-4">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-chat-square-text"></i> Reviews Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Total Reviews</span>
                                <span class="fw-semibold">@Model.TotalReviews</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Products with Reviews</span>
                                <span class="fw-semibold">@Model.productWithReviews</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Review Coverage</span>
                                <span class="fw-semibold">@Model.percentageReview.ToString("F1")%</span>
                            </div>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.percentageReview%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rating Distribution -->
        <div class="col-12 col-lg-4">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-bar-chart-fill"></i> Rating Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-success">
                                    <i class="bi bi-star-fill"></i> High Rated (4-5)
                                </span>
                                <span class="badge bg-success">@Model.highRatedProducts</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-danger">
                                    <i class="bi bi-star"></i> Low Rated (≤2)
                                </span>
                                <span class="badge bg-danger">@Model.lowRated</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stock Status -->
        <div class="col-12 col-lg-4">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-box"></i> Stock Status
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-danger">
                                    <i class="bi bi-exclamation-triangle-fill"></i> Out of Stock
                                </span>
                                <span class="badge bg-danger">@Model.outOfStock</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-warning">
                                    <i class="bi bi-exclamation-circle-fill"></i> Low Stock (≤5)
                                </span>
                                <span class="badge bg-warning text-dark">@Model.lowStock</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="row g-4 mb-4">
        <!-- Top Rated Product -->
        <div class="col-12 col-lg-6">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-trophy-fill text-warning"></i> Top Rated Product
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.topRatedProduct != null)
                        {
                            <div class="d-flex align-items-center">
                                <img src="@(!string.IsNullOrEmpty(Model.topRatedProduct.ProductImagePath) ? Model.topRatedProduct.ProductImagePath : Url.Content("~/images/icons/default.jpg"))"
                                     class="rounded-3 me-3"
                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold mb-1">@Model.topRatedProduct.ProductName</h6>
                                    <p class="text-muted small mb-1">@Model.topRatedProduct.ProductCategory</p>
                                    <p class="mb-0">
                                        <span class="badge bg-success">
                                            <i class="bi bi-star-fill"></i> Top Performer
                                        </span>
                                        <span class="text-muted ms-2 small">Rs. @Model.topRatedProduct.ProductPrice</span>
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">No rated products available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Lowest Rated Product -->
        <div class="col-12 col-lg-6">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-arrow-down-circle-fill text-danger"></i> Lowest Rated Product
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.lowRatedProduct != null)
                        {
                            <div class="d-flex align-items-center">
                                <img src="@(!string.IsNullOrEmpty(Model.lowRatedProduct.ProductImagePath) ? Model.lowRatedProduct.ProductImagePath : Url.Content("~/images/icons/default.jpg"))"
                                     class="rounded-3 me-3"
                                     style="width: 80px; height: 80px; object-fit: cover;" />
                                <div class="flex-grow-1">
                                    <h6 class="fw-semibold mb-1">@Model.lowRatedProduct.ProductName</h6>
                                    <p class="text-muted small mb-1">@Model.lowRatedProduct.ProductCategory</p>
                                    <p class="mb-0">
                                        <span class="badge bg-danger">
                                            <i class="bi bi-star"></i> Needs Attention
                                        </span>
                                        <span class="text-muted ms-2 small">Rs. @Model.lowRatedProduct.ProductPrice</span>
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">No rated products available</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Category Distribution -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-lg-6">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-tags-fill"></i> Products by Category
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.categoryCounts != null && Model.categoryCounts.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var category in Model.categoryCounts.OrderByDescending(c => c.Value))
                                {
                                    <div class="list-group-item px-0 border-0">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-semibold">@category.Key</span>
                                            <span class="badge bg-secondary">@category.Value</span>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar" role="progressbar"
                                                 style="width: @((category.Value / (double)Model.totalProducts * 100))%"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">No categories available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Most Expensive Products -->
        <div class="col-12 col-lg-6">
            <div class="hover-shadow">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-gem"></i> Most Expensive Products
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.expensiveProducts != null && Model.expensiveProducts.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var product in Model.expensiveProducts)
                                {
                                    <div class="list-group-item px-0 border-0 py-2">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center flex-grow-1">
                                                <img src="@(!string.IsNullOrEmpty(product.ProductImagePath) ? product.ProductImagePath : Url.Content("~/images/icons/default.jpg"))"
                                                     class="rounded me-2"
                                                     style="width: 40px; height: 40px; object-fit: cover;" />
                                                <div>
                                                    <p class="mb-0 fw-semibold small">@product.ProductName</p>
                                                    <p class="mb-0 text-muted" style="font-size: 0.75rem;">@product.ProductCategory</p>
                                                </div>
                                            </div>
                                            <span class="badge bg-black">Rs. @product.ProductPrice</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center mb-0">No products available</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .stat-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .progress {
        border-radius: 10px;
        background-color: #e9ecef;
    }

    .progress-bar {
        border-radius: 10px;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    }

    .list-group-item {
        transition: background-color 0.2s ease;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

    main {
        margin-bottom: 90px;
    }
</style>

