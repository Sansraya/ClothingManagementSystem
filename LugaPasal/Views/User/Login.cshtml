@model LugaPasal.Models.LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4" style="border-radius: 1rem;">
                <h2 class="text-center text-primary mb-4">Login</h2>
            
                <form method="post" asp-action="Login" asp-controller="User" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="username">Username</label>
                        <input class="form-control form-control-lg" type="text" asp-for="Username" placeholder="Enter your username" required />
                        <span asp-validation-for="Username" class="text-danger small"> </span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold" for="password">Password</label>
                        <input class="form-control form-control-lg" type="password" asp-for="Password" placeholder="Enter your password" required />
                        <span asp-validation-for="Password" class="text-danger small"> </span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember Me</label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <small class="text-muted">Don't have an account? <a asp-controller="User" asp-action="Register">Register</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        display:flex;
        flex-direction: column;
        min-height: 100vh;
        background: #f0f2f5;
    }

    main {
        flex: 1; /* Main grows to fill space */
        margin-bottom:350px;
    }
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }
</style>
