@model List<LugaPasal.Entities.Favorites>

<div class="container py-4">
    <h3 class="mb-4 text-center fw-bold">
        <i class="bi bi-bookmark-heart-fill text-warning me-2"></i> Favorites
    </h3>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="notifications alert alert-success alert-dismissible fade show m-3" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="notifications alert alert-danger alert-dismissible fade show m-3" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-bookmark-x fs-1 d-block mb-3"></i>
            <p>No favorites found yet. Start adding products you love!</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-warning px-4">Browse Products</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var favorite in Model)
            {
                var product = favorite.Product;
                <div class="col">
                    <div class="hover-shadow">
                        <div class="card h-100 shadow-sm border-0 rounded-3 " style="border:none;">
                            <div class="position-relative">
                                <img src="@product.ProductImagePath" class="card-img-top rounded-top-3" alt="@product.ProductName" style="height: 200px; object-fit: contain;">
                                <a asp-action="RemoveFromFavorites" asp-controller="User" asp-route-id="@product.ProductID"
                                   class="position-absolute top-0 end-0 m-2 btn btn-light btn-sm rounded-circle shadow-sm">
                                    <i class="bi bi-x-lg text-danger"></i>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title fw-semibold">@product.ProductName</h5>
                                <p class="card-text card-limit text-muted small mb-3">@product.ProductDescription</p>
                                <div class="d-flex justify-content-between align-items-center gap-2">
                                <a asp-action="ProductProfile" asp-controller="Product" asp-route-id="@product.ProductID"
                                       class="btn border w-50 text-uppercase shadow-sm hover-shadow" style=" font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 13px;line-height:20px;background-color:beige;">
                                    View Details
                                </a>
                                    <a asp-action="AddToCart" asp-controller="Product" asp-route-id="@product.ProductID"
                                       class="btn border w-50 text-white text-uppercase shadow-sm hover-shadow" style=" font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size: 13px;line-height:20px;background-color:black;">
                                        Add to Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    body {
        background-color: #f5f5f5;
    }

    .card-limit {
        display: -webkit-box;
        -webkit-line-clamp: 4; /* limit to 3 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    main {
        margin-bottom: 310px;
    }
</style>
